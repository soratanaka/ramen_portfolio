<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_gon %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header style = "display:flex; justify-content: center;">
    <% if user_signed_in? %>
      <%= link_to "ユーザー", user_path(current_user)%> 
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
      <%= link_to 'トップページ', toppages_path %>
      <% if current_user.admin? %>
        <%= link_to '管理者画面', rails_admin_path %>
      <% end %>
    <% else %>
      <%= link_to 'ログイン', new_user_session_path %>
      <%= link_to 'サインアップ', new_user_registration_path %>
      <%= link_to 'トップページ', toppages_path %>
      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
      <%= link_to 'ゲストログイン（管理者用）', users_guest_admin_sign_in_path, method: :post %>
    <% end %>
    <p class="notice"><%= notice %></p>
    <hr />
  </header>
  
    <body>
    <%= yield %>
  </body>
</html>
